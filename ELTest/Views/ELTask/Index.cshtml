<script>
    function nextPage(incrementBy) {
        var pageNumber = JSON.parse('@Html.Raw(Json.Serialize(ViewData["PageNumber"]))');

        $("#inputPageNumber").val(parseInt(pageNumber) + incrementBy);
        $("#form1").submit();
    }
</script>

